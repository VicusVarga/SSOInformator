<Window x:Class="SSOInformator.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSOInformator"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Ошибка подключения!" Height="180" Width="320" MaxHeight="180" MaxWidth="320" Icon="/Resources/error_icon.ico" >
    <Grid>
        <Image HorizontalAlignment="Left" Height="42" Margin="10,10,0,0" VerticalAlignment="Top" Width="47" Source="/Resources/error_icon.ico"/>
        <TextBlock Name="ErrorLabel" TextWrapping="Wrap" HorizontalAlignment="Left"  Margin="60,10,0,0" VerticalAlignment="Top" Height="84" Width="230" FontFamily="Arial" FontSize="14" />
        <Button Name="OKButton" Content="Ок" Click="OKButton_Click" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Width="75"/>
    </Grid>
</Window>
